# Docker Compose Environment Variables
# Copy this file to .env and configure for your deployment

# Port to expose the frontend on
PORT=80

# Backend API URL
# For local development with separate backend: http://localhost:3000/api
# For production with backend on same network: http://backend:3000/api
# For production with external backend: https://api.yourdomain.com/api
VITE_API_URL=/api

# Enable/disable user registration
VITE_REGISTRATION_ENABLED=false
